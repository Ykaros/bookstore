{
  "name": "book-store",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src/ --ext .ts,.tsx --fix",
    "start": "node index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "type-check-client": "tsc -p ./src/client/tsconfig.json",
    "build-client": "cross-env NODE_ENV=production vite build --config ./src/client/vite.config.ts",
    "build-server": "tsc -b src/server && yarn fix-server-alias",
    "dev-client": "vite --config ./src/client/vite.config.ts",
    "fix-server-alias": "tsc-alias -p ./src/server/tsconfig.json",
    "start-dev-server": "yarn fix-server-alias && yarn start",
    "dev-server": "tsc-watch --noClear -b ./src/server/tsconfig.json --onSuccess \"yarn start-dev-server\"",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\"",
    "build": "yarn clean && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run build-server\" \"npm run build-client\""
  },
  "keywords": [
    "typescript",
    "react",
    "vite",
    "fullstack",
    "express",
    "node",
    "mern"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ykaros/bookstore.git"
  },
  "license": "MIT",
  "author": "Jiazong",
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.0",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "fuse.js": "^7.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.1",
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@mui/styles": "^5.14.20",
    "@types/express": "^4.17.21",
    "@types/node": "^18.15.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "core-js": "^3.34.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "react-router": "^6.20.1",
    "react-router-dom": "^6.20.1",
    "request": "^2.88.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.7"
  }
}
